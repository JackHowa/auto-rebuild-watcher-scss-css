{
  "source": ["tokens/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/",
      "files": [{
        "destination": "_global.scss",
        "format": "scss/map-flat",
        "mapName": "global",
        "filter": {
          "attributes": {
            "category": "global"
          }
        }
      }]
    }
  }
}
